<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Add project</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css"
    />
  </head>
  <body class="bg-body-secondary">
    <!-- Navbar Start -->
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
      <div class="container-fluid">
        <a class="navbar-brand" href="#"
          ><img class="w-75" src="/src/assets/img/logo.png" alt=""
        /></a>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto fs-6">
            <li class="nav-item">
              <a
                class="nav-link"
                style="font-size: 14px"
                aria-current="page"
                href="b-index.html"
                >Home</a
              >
            </li>
            <li class="nav-item">
              <a class="nav-link active" href="#" style="font-size: 14px"
                >Add Project</a
              >
            </li>
          </ul>
          <div class="d-flex" role="search">
            <a href="b-contact.html">
              <button
                type="button"
                class="btn btn-dark btn-outline-danger text-light py-0 rounded-pill"
                style="font-size: 14px"
              >
                Contact
              </button>
            </a>
          </div>
        </div>
      </div>
    </nav>
    <!-- Navbar End -->
    <!-- Form Add Project Start -->
    <form>
      <div class="container" style="width: 35%">
        <div class="border border-2 p-4 mt-5">
          <h3 class="d-flex justify-content-center m-5">ADD MY PROJECT</h3>
          <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label fw-bold"
              >Project Name</label
            >
            <input
              type="text"
              class="form-control shadow"
              id="exampleInputEmail1"
              aria-describedby="emailHelp"
            />
          </div>
          <div class="d-flex justify-content-between w-100">
            <div class="col-md-5">
              <label for="validationCustom01" class="form-label fw-bold"
                >Start Date</label
              >
              <input
                type="date"
                class="form-control shadow"
                id="validationCustom01"
                value="Mark"
                required
              />
            </div>
            <div class="col-md-5">
              <label for="validationCustom02" class="form-label fw-bold"
                >End Date</label
              >
              <input
                type="date"
                class="form-control shadow"
                id="validationCustom02"
                value="Otto"
                required
              />
            </div>
          </div>
          <div class="mt-3">
            <label for="validationTextarea" class="form-label fw-bold"
              >Description</label
            >
            <textarea
              class="form-control shadow"
              id="validationTextarea"
              rows="5"
              required
            ></textarea>
          </div>
          <label class="mt-3 fw-bold">Tecnoligies</label>
          <div class="d-flex gap-5">
            <div class="mt-2 form-check">
              <input
                type="checkbox"
                class="form-check-input"
                id="exampleCheck1"
              />
              <label class="form-check-label" for="exampleCheck1"
                >Node Js</label
              >
              <div>
                <input
                  type="checkbox"
                  class="form-check-input"
                  id="exampleCheck1"
                />
                <label class="form-check-label" for="exampleCheck1"
                  >React JS</label
                >
              </div>
            </div>
            <div class="mt-2 form-check">
              <input
                type="checkbox"
                class="form-check-input"
                id="exampleCheck1"
              />
              <label class="form-check-label" for="exampleCheck1"
                >Next Js</label
              >
              <div>
                <input
                  type="checkbox"
                  class="form-check-input"
                  id="exampleCheck1"
                />
                <label class="form-check-label" for="exampleCheck1"
                  >TypeScript</label
                >
              </div>
            </div>
          </div>
          <div class="mt-3 mb-4">
            <label for="formFileSm" class="form-label fw-bold"
              >Upload Image</label
            >
            <input
              class="form-control form-control-sm shadow"
              id="formFileSm"
              type="file"
            />
            <button
              type="submit"
              class="btn btn-dark py-0 rounded-5 my-3 mb-3 float-end"
            >
              Submit
            </button>
          </div>
        </div>
      </div>
    </form>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
